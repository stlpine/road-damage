# --- Submission ---
TEAM_NAME=tesla-coil

# --- Hardware ---
# Use 'mps' for Apple Silicon GPU, 'cuda:0' for NVIDIA, or 'cpu'
DEVICE=mps

# --- Paths ---
DATASET_DIR=./dataset
# Main output directory for all training runs
OUTPUT_DIR=outputs/train

# ----------------------------------------------------
# STAGE 1: Base Model Training (Run this once)
# ----------------------------------------------------
INITIAL_MODEL_PATH=yolov8n.pt
BASE_TRAINING_EPOCHS=25
FREEZE_LAYERS=10
BASE_LR=0.01

# ----------------------------------------------------
# STAGE 2: Fine-Tuning (Run this multiple times)
# ----------------------------------------------------
BASE_MODEL_PATH=outputs/train/base_models/your_base_model/weights/best.pt
FINETUNE_EPOCHS=50
FINETUNE_LR=0.0005

# ----------------------------------------------------
# STAGE 3: Ensembling (For test_ensemble.py)
# ----------------------------------------------------
# Provide a comma-separated list of paths to the models you want to ensemble.
# Example: ENSEMBLE_MODEL_PATHS=outputs/train/finetuned_models/run1/weights/best.pt,outputs/train/finetuned_models/run2/weights/best.pt
ENSEMBLE_MODEL_PATHS=

# --- General Hyperparameters ---
BATCH_SIZE=16
IMG_SIZE=640
PATIENCE=25
OPTIMIZER=AdamW
WEIGHT_DECAY=0.0005
MOMENTUM=0.937

# --- Data Augmentation ---
hsv_h=0.015
hsv_s=0.7
hsv_v=0.4
DEGREES=10.0
TRANSLATE=0.1
SCALE=0.5
FLIPLR=0.5
MOSAIC=1.0
