# --- Submission ---
TEAM_NAME=tesla-coil

# --- Hardware ---
# Use 'mps' for Apple Silicon GPU, 'cuda:0' for NVIDIA, or 'cpu'
DEVICE=mps

# --- Paths ---
DATASET_DIR=./dataset
# Main output directory for all training runs
OUTPUT_DIR=outputs/train

# ----------------------------------------------------
# STAGE 1: Base Model Training (Run this once)
# ----------------------------------------------------
# Start from a pre-trained model from Ultralytics
INITIAL_MODEL_PATH=yolov8n.pt
BASE_TRAINING_EPOCHS=25
# Number of backbone layers to freeze. 10 is a good starting point for YOLOv8n.
FREEZE_LAYERS=10
# Use a standard learning rate for base training
BASE_LR=0.01

# ----------------------------------------------------
# STAGE 2: Fine-Tuning (Run this multiple times)
# ----------------------------------------------------
# IMPORTANT: After running train_base.py, update this path to point to your new base model.
# Example: BASE_MODEL_PATH=runs/train/base_models/20250805_163000_yolov8n_base/weights/best.pt
BASE_MODEL_PATH=outputs/train/base_models/your_base_model/weights/best.pt

FINETUNE_EPOCHS=50
# Use a smaller learning rate for fine-tuning to avoid corrupting the learned features
FINETUNE_LR=0.0005

# --- General Hyperparameters (Used in both stages unless overridden) ---
BATCH_SIZE=32
IMG_SIZE=320
PATIENCE=25
OPTIMIZER=AdamW
WEIGHT_DECAY=0.0005
MOMENTUM=0.937

# --- Data Augmentation ---
hsv_h=0.015
hsv_s=0.7
hsv_v=0.4
DEGREES=10.0
TRANSLATE=0.1
SCALE=0.5
FLIPLR=0.5
MOSAIC=1.0
