# --- Submission ---
TEAM_NAME=tesla-coil

# --- Hardware ---
# Use 'mps' for Apple Silicon GPU, 'cuda:0' for NVIDIA, or 'cpu'
DEVICE=mps

# --- Paths ---
DATASET_DIR=./dataset
# Main output directory for all training runs
OUTPUT_DIR=outputs/train

# --- Testing ---
# Path to the best.pt file from a finetune run
MODEL_TO_TEST_PATH=outputs/train/finetuned_models/your_run/weights/best.pt
CONFIDENCE_THRESHOLD=0.4
# Enable Test-Time Augmentation (TTA) for potentially better accuracy
TEST_AUGMENT=True
# IoU threshold for Non-Maximum Suppression (NMS)
IOU_THRESHOLD=0.5

# Base Model Training (Run this once)
INITIAL_MODEL_PATH=yolo11s.pt
BASE_TRAINING_EPOCHS=10
FREEZE_LAYERS=10
BASE_LR=0.01

# Fine-Tuning (Run this multiple times)
BASE_MODEL_PATH=outputs/train/base_models/20250807_022645_yolo11s_base/weights/best.pt
FINETUNE_EPOCHS=50
FINETUNE_LR=0.0001

# Ensembling (For test_ensemble.py)
# Provide a comma-separated list of paths to the models you want to ensemble.
# Example: ENSEMBLE_MODEL_PATHS=outputs/train/finetuned_models/run1/weights/best.pt,outputs/train/finetuned_models/run2/weights/best.pt
ENSEMBLE_MODEL_PATHS=outputs/train/finetuned_models/20250807_024312_ft_e30_b16_lr0.0005/weights/best.pt,outputs/train/finetuned_models/20250807_031137_ft_e80_b16_lr0.0005/weights/best.pt,outputs/train/finetuned_models/20250807_041710_ft_e50_b32_lr0.0005/weights/best.pt,outputs/train/finetuned_models/20250807_052428_ft_e25_b16_lr0.0001/weights/best.pt

# --- General Hyperparameters ---
BATCH_SIZE=16
IMG_SIZE=320
PATIENCE=25
OPTIMIZER=AdamW
WEIGHT_DECAY=0.0005
MOMENTUM=0.937

# --- Data Augmentation ---
hsv_h=0.015
hsv_s=0.7
hsv_v=0.4
DEGREES=5.0
TRANSLATE=0.1
SCALE=0.3
FLIPLR=0.5
MOSAIC=1.0
